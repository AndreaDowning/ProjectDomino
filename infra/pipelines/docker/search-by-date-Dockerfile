FROM python:3.7
RUN apt-get update \
    && apt-get install -y --no-install-recommends git vim \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*


COPY . /app
RUN pip install prefect==0.10.1 simplejson twarc neo4j boto3==1.12.39 \
    pandas nest_asyncio pyarrow urlextract git+https://github.com/twintproject/twint.git@origin/master#egg=twint

WORKDIR /app
