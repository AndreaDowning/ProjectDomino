FROM alpine

ARG TARGETPLATFORM
ARG BUILDPLATFORM
ARG BUILD_DATE
ARG VCS_REF
ARG VERSION



RUN apk add --no-cache curl tor && \
    sed "1s/^/SocksPort 0.0.0.0:9050\n/" /etc/tor/torrc.sample > /etc/tor/torrc



HEALTHCHECK --interval=60s --timeout=15s --start-period=20s \
    CMD curl -s --socks5 127.0.0.1:9050 'https://check.torproject.org/' | grep -qm1 Congratulations

VOLUME ["/var/lib/tor"]

USER tor

CMD ["tor"]


FROM python:3.7
RUN apt-get update \
    && apt-get install -y --no-install-recommends git vim \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*


COPY . /app
RUN pip install prefect==0.10.1 simplejson twarc neo4j boto3==1.12.39 \
    pandas  pyarrow urlextract git+https://github.com/twintproject/twint.git@origin/master#egg=twint

WORKDIR /app
